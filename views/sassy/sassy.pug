    script.
      const slider = $('.slider');
      const header__bio = $('.header__bio');


      slider.mouseover(()=>{
        $('.header__bio').css('opacity', '0')
      });
      slider.mouseout(()=>{
        $('.header__bio').css('opacity', '1')
      });

      header__bio.mouseover(()=>{
        $('.header__bio').css('opacity', '0')
      });
      header__bio.mouseout(()=>{
        $('.header__bio').css('opacity', '1')
      });
